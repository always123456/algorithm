// 定义调试配置 - 告诉vs code 如何启动和调试我的程序
{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) 启动实验",   // 配置名称（在调试下拉菜单中显示）
            "type": "cppdbg",       // 调试器类型
            "request": "launch",    // 请求类型： launch(启动)或者 attach （附加到进程）
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",    // 要调试的程序路径
            "args": [],     // 传递给程序的命令行参数
            "stopAtEntry": false,       // 是否在程序入口处暂停
            "cwd": "${fileDirname}",    // 程序运行的工作目录
            // 以fileDirname为cwd参数的值，打开不同的文件时，cwd的值会发生改变
            // 以workspaceFolder为cwd参数的值，打开不同的文件时，cwd的值保持不变，始终为D:\C project(vscode)
            "environment": [],      // 环境变量
            "externalConsole": false,   // 是否使用外部控制台（true = 新窗口）
            "MIMode": "gdb",        // 调试器模式
            "miDebuggerPath": "D:\\mingw64\\MinGW\\bin\\gdb.exe",   //调试器路径
            "setupCommands": [      // 调试器启动时的初始命令
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc.exe 生成活动文件"  //提前生成.exe文件，防止出错
        }

    ]
}